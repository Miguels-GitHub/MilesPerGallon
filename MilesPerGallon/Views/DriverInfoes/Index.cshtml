@model IEnumerable<MilesPerGallon.DriverInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Driver's Information</h1>

  


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MilesDriven)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GallonsFilled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FillupDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MilesDriven)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GallonsFilled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FillupDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
